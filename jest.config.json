{
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageReporters": [
        "lcov",
        "text-summary"
    ],
    "collectCoverageFrom": [
        "tests/**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
        "/node_modules/",
        "/__tests__/"
    ],
    "testPathIgnorePatterns": [
        "/node_modules/"
    ]
}